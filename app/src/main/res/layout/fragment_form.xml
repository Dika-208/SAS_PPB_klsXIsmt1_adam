<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formulir Deposito"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Nama -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:hint="Silahkan masukkan username anda"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="20dp"/>

        <!-- Nominal -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal Deposito"
                android:textColor="@color/text_primary"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_minimal_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Minimal Rp 1.000.000"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/et_nominal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:hint="Silahkan masukkan nominal angka"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:inputType="number"
            android:layout_marginBottom="20dp"/>

        <!-- Suku Bunga -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suku Bunga Tahunan (%)"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/et_suku_bunga"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_background"
            android:hint="Contoh: 5.0"
            android:text=""
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:inputType="numberDecimal"
            android:layout_marginBottom="20dp"/>

        <!-- Tenor -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Tenor Deposito *"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp"/>

        <RadioGroup
            android:id="@+id/rg_tenor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rb_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1 Bulan"
                android:textColor="@color/text_primary"
                android:paddingVertical="12dp"
                android:background="@drawable/radio_background"/>

            <RadioButton
                android:id="@+id/rb_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 Bulan"
                android:textColor="@color/text_primary"
                android:paddingVertical="12dp"
                android:background="@drawable/radio_background"/>

            <RadioButton
                android:id="@+id/rb_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 Bulan"
                android:textColor="@color/text_primary"
                android:paddingVertical="12dp"
                android:background="@drawable/radio_background"/>

            <RadioButton
                android:id="@+id/rb_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="12 Bulan"
                android:textColor="@color/text_primary"
                android:paddingVertical="12dp"
                android:background="@drawable/radio_background"/>

        </RadioGroup>

        <!-- Info Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/secondary_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‹ Informasi Penting"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Suku Bunga Default: 5% per tahun (bisa diubah)"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Perhitungan: (Nominal Ã— Suku Bunga Ã— Tenor) Ã· (100 Ã— 12)"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â€¢ Contoh: 10.000.000 Ã— 5% Ã— 6 bulan Ã· 12 = 250.000"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"/>

        </LinearLayout>

        <!-- Tombol Hitung -->
        <Button
            android:id="@+id/btn_hitung"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:enabled="false"
            android:backgroundTint="@color/primary_color"
            android:text="HITUNG SIMULASI DEPOSITO"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* Silahkan isi semua data terlebih dahulu"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>