<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/primary_background">

    <!-- App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <!-- Logo Bank -->
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/logo_apk"
            android:scaleType="fitCenter"
            android:contentDescription="Logo Bank ABC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Deposito Simulator"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank ABC"
            android:textColor="@color/primary_color"
            android:textSize="12sp"/>

    </LinearLayout>

    <!-- Fragment Container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="8dp">

        <!-- Materi -->
        <LinearLayout
            android:id="@+id/nav_materi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_inactive_background"
            android:padding="4dp">

            <ImageView
                android:id="@+id/icon_materi"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/buku"
                android:scaleType="fitCenter"
                android:contentDescription="Materi" />

            <TextView
                android:id="@+id/text_materi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Materi"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Form -->
        <LinearLayout
            android:id="@+id/nav_form"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_inactive_background"
            android:padding="4dp">

            <ImageView
                android:id="@+id/icon_form"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/form"
                android:scaleType="fitCenter"
                android:contentDescription="Form" />

            <TextView
                android:id="@+id/text_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Form"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

        <!-- Hasil -->
        <LinearLayout
            android:id="@+id/nav_hasil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/nav_inactive_background"
            android:padding="4dp"
            android:alpha="0.5">

            <ImageView
                android:id="@+id/icon_hasil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/hasil"
                android:scaleType="fitCenter"
                android:contentDescription="Hasil" />

            <TextView
                android:id="@+id/text_hasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>